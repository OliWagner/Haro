<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HARO Stapler</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="margin-top:0px;">
        <center>
            <table border="0" width="1200">
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                    <td>

                        <img src="~/Content/Images/haro-stapler.png" style="max-width:150px;" /><br />
                        <big>
                            <big>
                                <b class="headlineStart mbetrieb">Meisterbetrieb</b>
                            </big>
                        </big>

                    </td>
                    <td>
                        <center>
                            @*<a href="http://www.hyster.com" target="_blank">*@
                                <img src="~/Content/Images/HysterLogoSchwarzRand.png" border="0" />
                            @*</a>*@
                        </center>
                    </td>
                    <td id="tdStartseiteKoelnBg" rowspan="2" class="headlineStart"><b>Vermietung, Service und Ersatzteile in Köln</b><br /><small>Wir bewegen was!</small></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>
                        <center>
                            <small class="headlineStart">
                                Hyster-Vertragshändler
                            </small>
                        </center>
                    </td>
                </tr>
            </table>
        </center>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Start", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Marken<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Hyster", "Hyster", "Home")</li>
                            <li>@Html.ActionLink("andere Hersteller", "Service", "Home")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Gebrauchtgeräte", "Gebrauchte", "Home")</li>
                    <li>@Html.ActionLink("Zubehör", "Zubehoer", "Home")</li>
                    <li>@Html.ActionLink("Produktvorstellung", "Produktvorstellung", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Kontakt", "Kontakt", "Home")</li>
                    <li>@Html.ActionLink("Impressum", "Impressum", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HARO Staplerservice e.K.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
